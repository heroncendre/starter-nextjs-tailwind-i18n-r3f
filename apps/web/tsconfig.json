{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "baseUrl": ".", // n√©cessaire pour `paths` locaux
        "paths": {
            "@ui/*": ["../../packages/ui"],
            "@lib/*": ["../../packages/lib"]
        },
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ]
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts",
        "tailwind.config.ts",
        "../../packages/ui/components/ThemeSwitch.tsx",
        "../../packages/lib/hooks/useHydrated.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
